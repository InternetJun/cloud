<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.example.web.mapper.RoleMapper">
    <select id="getRolesById" resultType="org.example.web.pojo.RoleInfo">
        select r.* from t_role r,user_role hrr where hrr.`role_id`=r.`id` and hrr.`id`=#{id}
    </select>
</mapper>